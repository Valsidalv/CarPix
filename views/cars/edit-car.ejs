<% include ../partials/header %>

<div class="container">
    <h2 class="text-center mt-3">Edit <%= car.name %></h2>
    <form action="/cars/<%= car._id %>?_method=PUT" method="POST" class="mt-5">
        <div style="width: 35%; margin: 0 auto;">
            <div class="form-group">
                <input type="text" class="form-control" name="car[name]" value="<%= car.name %>" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="car[image]" value="<%= car.image %>" required>
            </div>
            <div class="form-group">
                <textarea name="car[description]" class="form-control" rows="3"  required><%= car.description %></textarea>
            </div>
            <div class="form-group ">
                <input type="submit" class="btn btn-primary btn-block">
                <a href="/cars/<%= car._id %>" class="btn btn-secondary btn-block">Back</a>
            </div>
        </div>
    </form>

</div>

<% include ../partials/footer %>