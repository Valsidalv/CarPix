<% include ../partials/header %>

<div class="container">
    <h2 class="text-center mt-3">Add new car</h2>
    <form action="/cars" method="POST" class="mt-5">
        <div style="width: 35%; margin: 0 auto;">
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Car name" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="image" placeholder="Car image" required>
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" rows="3" placeholder="Car description" required></textarea>
            </div>
            <div class="form-group ">
                <input type="submit" class="btn btn-primary btn-block">
                <a href="/cars" class="btn btn-secondary btn-block">Back</a>
            </div>
        </div>
    </form>

</div>

<% include ../partials/footer %>