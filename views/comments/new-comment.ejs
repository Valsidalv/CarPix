<% include ../partials/header %>

<div class="container">
    <h2 class="text-center mt-3">Add new comment to <%= car.name %></h2>
    <form action="/cars/<%= car._id %>/comments" method="POST" class="mt-5">
        <div style="width: 35%; margin: 0 auto;">
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="text" required>
            </div>
            <div class="form-group ">
                <input type="submit" class="btn btn-primary btn-block">
                <a href="/cars/<%= car._id %>" class="btn btn-secondary btn-block">Back</a>
            </div>
        </div>
    </form>

</div>

<% include ../partials/footer %>